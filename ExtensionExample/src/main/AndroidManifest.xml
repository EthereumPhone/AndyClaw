<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndyClaw">

        <!-- AndyClaw extension discovery metadata -->
        <meta-data
            android:name="org.ethereumphone.andyclaw.EXTENSION"
            android:value="true" />
        <meta-data
            android:name="org.ethereumphone.andyclaw.EXTENSION_ID"
            android:value="hello_world" />
        <meta-data
            android:name="org.ethereumphone.andyclaw.EXTENSION_NAME"
            android:value="Hello World Extension" />
        <meta-data
            android:name="org.ethereumphone.andyclaw.EXTENSION_MANIFEST"
            android:resource="@raw/extension_manifest" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AndyClaw">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".HelloWorldSkillService"
            android:exported="true">
            <intent-filter>
                <action android:name="org.ethereumphone.andyclaw.EXTENSION_SERVICE" />
            </intent-filter>
        </service>
    </application>

</manifest>
